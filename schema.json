{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "synth-definition",
    "title": "Synthdef",
    "description": "Definition of a synth's parameters",
    "type": "object",
    "properties": {
        "manufacturer": {
            "type": "string"
        },
        "model": {
            "type": "string"
        },
        "shortname": {
            "type": "string",
            "pattern": "^[a-z0-9]{3,}$"
        },
        "parts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "channel": {
                        "type": "integer"
                    },
                    "channeloffset": {
                        "type": "integer"
                    },
                    "messageformat": {
                        "type": "string"
                    },
                    "sections": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "parameters": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "parameternumber": {
                                                "type": "integer"
                                            },
                                            "class": {
                                                "type": "string",
                                                "enum": [
                                                    "range",
                                                    "toggle",
                                                    "select"
                                                ]
                                            }
                                        },
                                        "allOf": [
                                            {
                                                "if": {
                                                    "properties": {
                                                        "class": {
                                                            "const": "range"
                                                        }
                                                    }
                                                },
                                                "then": {
                                                    "properties": {
                                                        "max": {
                                                            "type": "integer"
                                                        },
                                                        "min": {
                                                            "type": "integer"
                                                        }
                                                    }
                                                }
                                            },
                                            {
                                                "if": {
                                                    "properties": {
                                                        "key": {
                                                            "const": "toggle"
                                                        }
                                                    }
                                                },
                                                "then": {
                                                    "properties": {
                                                        "on": {
                                                            "type": "integer"
                                                        }
                                                    }
                                                }
                                            },
                                            {
                                                "if": {
                                                    "properties": {
                                                        "key": {
                                                            "const": "select"
                                                        }
                                                    }
                                                },
                                                "then": {
                                                    "properties": {
                                                        "choices": {
                                                            "type": "array",
                                                            "items": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "name": {
                                                                        "type": "string"
                                                                    },
                                                                    "optionvalue": {
                                                                        "type": "integer"
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                            
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "required": [ "manufacturer", "model", "shortname" ]
}
